			"name": "0. user login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse the response JSON",
							"const response = pm.response.json();",
							"",
							"// Assuming the token is returned as response.accessToken or response.token",
							"const token = response.accessToken || response.token;",
							"",
							"if (token) {",
							"  // Set the token as a collection variable",
							"  pm.collectionVariables.set(\"accessToken\", token);",
							"  console.log(\"Access token set successfully:\", token);",
							"} else {",
							"  console.warn(\"Access token not found in response.\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
